# Tanım: X için mülkiyet göstergesi
# URL: https://xorg.freedesktop.org/
# Paketçi: Cihan_Alkan
# Gerekler: xorg-util-macros xorg-libx11
# Grup: xorg

isim=xorg-xprop
surum=1.2.2
devir=1
kaynak=(https://xorg.freedesktop.org/archive/individual/app/xprop-${surum}.tar.bz2)

derle() {

  cd "${SRC}/xprop-${surum}"
  ./configure --prefix=/usr
  make

  make DESTDIR="${PKG}" install
  install -m755 -d "${PKG}/usr/share/licenses/${isim}"
  install -m644 COPYING "${PKG}/usr/share/licenses/${isim}/"
}
