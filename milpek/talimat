# Tanım: Milis Program Ekle Kaldır
# URL: https://github.com/oltulu/milpek
# Paketçi: Cihan_Alkan
# Gerekler: qt5

isim=milpek
surum=0.3
devir=1

kaynak=()

derle() {
        git_indir https://github.com/oltulu/milpek $isim 
	cd $SRC/$isim
	qmake-qt5 milpek.pro -spec linux-g++ CONFIG+=debug CONFIG+=qml_debug 
    make
    mkdir -p $PKG/usr/bin
    mkdir -p $PKG/usr/share/applications
    mkdir -p $PKG/usr/share/icons
    mkdir -p $PKG/root/arayuz/simgeler
    mkdir -p $PKG/usr/share/milpek

    mv milpek $PKG/usr/bin/
    mv $isim.desktop $PKG/usr/share/applications/
    mv milpek.png $PKG/usr/share/icons/
    mv arayuz/* $PKG/root/arayuz/
    cd $SRC
    wget https://sources.archlinux.org/other/packages/archlinux-appstream-data/20180424/extra/icons-64x64.tar.gz
    tar -xzf icons-64x64.tar.gz -C $PKG/root/arayuz/simgeler/
    rm $SRC/icons-64x64.tar.gz
    wget https://sources.archlinux.org/other/packages/archlinux-appstream-data/20180424/community/icons-64x64.tar.gz
    tar -xzf icons-64x64.tar.gz -C $PKG/root/arayuz/simgeler/
    rm $SRC/icons-64x64.tar.gz
}
