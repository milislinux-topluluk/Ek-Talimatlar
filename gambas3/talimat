  mv -v usr/share/gambas3/info/gb.db.* $PKG/usr/share/gambas3/info/
  mv -v usr/lib/gambas3/gb.dbus.* $PKG/usr/lib/gambas3/
  mv -v usr/share/gambas3/info/gb.dbus.* $PKG/usr/share/gambas3/info/
