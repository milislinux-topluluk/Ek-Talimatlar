# Tanım: USB kurulum Belleği Hazırlama
# URL: http://wiki.rosalab.ru
# Paketçi: Cihan Alkan
# Gerekler: 

isim=rosa-image-writer
surum=2.6.1
devir=1

kaynak=(http://wiki.rosalab.ru/ru/images/2/24/RosaImageWriter-2.6.1-lin-x86_64.txz
        http://wiki.rosalab.ru/en/configs/logos/wiki-rosalab-logo.png
        tr_TR.qm
        rosa-image-writer.desktop)

derle() {

    cd RosaImageWriter
	
    mkdir -p $PKG/usr/bin
    mkdir -p $PKG/usr/share/applications
    mkdir -p $PKG/usr/share/icons
    mkdir -p $PKG/usr/share/RosaImageWriter
    cp -r $SRC/RosaImageWriter/* $PKG/usr/share/RosaImageWriter/
    cp -r $SRC/tr_TR.qm $PKG/usr/share/RosaImageWriter/lang/
    cp -r ../wiki-rosalab-logo.png $PKG/usr/share/icons/
    cp -r ../$isim.desktop $PKG/usr/share/applications/


}
