isim=fswatch
surum=1.11.2
devir=1
kaynak=(https://github.com/emcrisostomo/fswatch/releases/download/$surum/$isim-$surum.tar.gz)

derle() {
    cd "$isim-$surum"
    ./configure --prefix=/usr
    make
    make DESTDIR="$PKG/" install
}

