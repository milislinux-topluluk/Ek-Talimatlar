# Tanım: Linux için Dropbox - Caja uzantısı
# URL: https://github.com/mate-desktop/caja-dropbox
# Paketçi: Cihan_Alkan
# Gerekler: caja glib2 libnotify polkit procps-ng python-gtk xdg-utils mate-common python-docutils
# Grup: 

isim=caja-dropbox
surum=1.18.0
devir=1
kaynak=(https://pub.mate-desktop.org/releases/1.18/$isim-$surum.tar.xz)

derle() {
  cd $isim-$surum
  autoreconf -fi
  sed -i "s/python/python2/" configure.ac configure caja-dropbox.in Makefile.am Makefile.in rst2man.py
  ./configure \
    --prefix=/usr \
    --disable-static
  make
  make DESTDIR="$PKG" install
  install -Dm644 COPYING "$PKG/usr/share/licenses/$isim/COPYING"
}
