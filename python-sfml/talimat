# Tanım: SFML için gayri resmi Python bağlaması
# URL: http://python-sfml.org
# Paketçi: Cihan_Alkan
# Gerekler: cython sfml python
# Grup: kütüphane

isim=python-sfml
surum=20150820
devir=1

kaynak=()

derle() {
	if [ ! -d $DERLEME_KAYNAKDIZIN/$isim  ];then
		git clone https://github.com/Sonkun/python-sfml $DERLEME_KAYNAKDIZIN/$isim 
	else
		cd $DERLEME_KAYNAKDIZIN/$isim 
		git pull
		cd -
	fi
	cp -r $DERLEME_KAYNAKDIZIN/$isim $SRC/
	cd $SRC/$isim
	python setup.py build_ext

	python setup.py install --root="${PKG}" --prefix=/usr

}
