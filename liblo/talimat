# Tanım: Hafif bir OSC (Açık Ses Kontrolü) uygulaması
# URL: http://liblo.sourceforge.net/
# Paketçi: Cihan_Alkan
# Gerekler: doxygen glibc
# Grup: 

isim=liblo
surum=0.29
devir=1
kaynak=(https://github.com/radarsat1/liblo/releases/download/0.29/liblo-0.29.tar.gz)

derle() {

  cd "$SRC/$isim-$surum"

  ./configure --prefix=/usr
  make

  make DESTDIR="$PKG" install

  # package docs, by request; the package size is less than 1MB
  # reasonable to include even if it increases from a few KBs to 100s of KBs -- schiv
  mkdir -p ${PKG}/usr/share/{man/man3,doc/${isim}/{html,latex},${isim}/examples}

  # delete broken man pages
  rm -f doc/man/man3/_*.3

  # move all doc
  install -Dm 644 doc/html/* ${PKG}/usr/share/doc/${isim}/html
  install -Dm 644 doc/latex/* ${PKG}/usr/share/doc/${isim}/latex
  install -Dm 644 doc/man/man3/*.3 ${PKG}/usr/share/man/man3
  install -Dm 644 examples/*.{cpp,c} ${PKG}/usr/share/${isim}/examples
}
