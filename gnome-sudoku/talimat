# Tanım: Mantık becerilerinizi test edin
# URL: https://wiki.gnome.org/Apps/Sudoku
# Paketçi: Cihan Alkan
# Gerekler: dconf gtk3 libgee json-glib qqwing
# Grup: oyun

isim=gnome-sudoku
surum=3.24.0
devir=1

kaynak=(https://git.gnome.org/browse/gnome-sudoku/snapshot/gnome-sudoku-$surum.tar.xz)

derle() {
cd $isim-$surum
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-schemas-compile
  make
  make DESTDIR=$PKG install
  sed -i 's_#! /usr/bin/python_#!/usr/bin/python2_' $PKG/usr/bin/gnome-sudoku
}
