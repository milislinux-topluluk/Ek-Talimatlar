# Tanım: LXDE için hafif X11 masaüstü paneli
# URL: https://lxde.org/
# Paketçi: Cihan_Alkan
# Gerekler: alsa-lib menu-cache lxmenu-data libwnck libfm-gtk2 intltool docbook-xml docbook-xsl wireless-tools
# Grup: lxde

isim=lxpanel
surum=0.9.3
devir=1
kaynak=(https://downloads.sourceforge.net/lxde/$isim-$surum.tar.xz
        fix-crash.patch)

derle() {

  cd $isim-$surum
  # Fix crash
  patch -Np1 -i ../fix-crash.patch

  ./configure \
    --sysconfdir=/etc \
    --prefix=/usr

  #https://bugzilla.gnome.org/show_bug.cgi?id=656231
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

  make
  make DESTDIR="$PKG" install
}
