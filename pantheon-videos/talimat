# Tanım: Pantheon Medya Oynatıcısı
# URL: https://github.com/elementary/videos
# Paketçi: Cihan_Alkan
# Gerekler: cmake intltool valaclutter clutter-gst clutter-gtk gdk-pixbuf2 glib2 glibc gstreamer-plugins-base gstreamer gtk3 libgee xorg-libx11 granite
# Grup: pantheon

isim=pantheon-videos
surum=0.2.4
devir=1
kaynak=(https://github.com/elementary/videos/archive/$surum.tar.gz::$isim-$surum.tar.gz
       remove-glib-application-set-default.patch)

derle() {

  if [[ -d build ]]; then
    rm -rf build
  fi
  mkdir build
  cd videos-$surum
  patch -Np1 -i ../remove-glib-application-set-default.patch

  cd ../build

  cmake ../videos-${surum} \
    -DCMAKE_BUILD_TYPE='Release' \
    -DCMAKE_INSTALL_PREFIX='/usr' \
    -DGSETTINGS_COMPILE='OFF'
  make
  make DESTDIR="${PKG}" install
}
