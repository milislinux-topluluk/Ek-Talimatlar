# Grup: kde


isim=cantor
surum=17.12.0
devir=1
kaynak=(https://download.kde.org/stable/applications/$surum/src/$isim-$surum.tar.xz)

derle() {

	mkdir build
	cd build
	cmake ../$isim-$surum \
		-DCMAKE_BUILD_TYPE=RELEASE \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_TESTING=OFF \
		-Wno-dev
	make
	make DESTDIR=$PKG install
}
