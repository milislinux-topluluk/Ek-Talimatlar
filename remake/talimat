isim=remake
surum=4.2.1+dbg1.1
devir=1
kaynak=(https://sourceforge.net/projects/bashdb/files/remake/4.2%2Bdbg-1.1/remake-4.2.1%2Bdbg1.1.tar.bz2)


derle() {
cd $isim-$surum
  autoreconf -fi

  ./configure --prefix=/usr
  make

  make DESTDIR=${PKG} install
  mv "$PKG/usr/include/gnumake.h" "$PKG/usr/include/remake.h"
}
