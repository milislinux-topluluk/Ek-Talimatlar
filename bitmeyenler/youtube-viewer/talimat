# Tanım: YouTube videolarını izlemek için komut satırı yardımcı programı
# URL: https://github.com/trizen/youtube-viewer
# Paketçi: Cihan_Alkan
# Gerekler: perl perl-data-dump perl-json perl-lwp-protocol-https perl-libwww perl-module-build
# Grup: medya

isim=youtube-viewer
surum=3.3.3
devir=1
kaynak=(https://github.com/trizen/youtube-viewer/archive/3.3.3.tar.gz::$isim-$surum.tar.gz)

derle() {

    cd "$isim-$surum"
    perl Build.PL --installdirs vendor --gtk
    ./Build test
    ./Build install --destdir "$PKG"
    rm -r "$PKG"/usr/lib
}
