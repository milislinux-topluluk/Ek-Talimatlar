isim=batctl
surum=2018.1
devir=1
kaynak=(http://downloads.open-mesh.net/batman/releases/batman-adv-$surum/batctl-$surum.tar.gz)

derle() {
  cd batctl-$surum
  make
  make DESTDIR="$PKG" PREFIX=/usr SBINDIR=/usr/bin install
}
